<%- include('partials/navbar') %>

<form id="register" action="/register" method="POST">
    <div class="register-div">
        <h1 class="register-header">Become a blogger here!</h1>
        <div class="input-field first-name">
            <!-- first name -->
            <div class="name-div">
                <label class="input-label-email" for="firstName">First Name</label>
                <input  placeholder="Enter your First Name" type="text" name="firstName" id="firstName">
            </div>
            <!-- Last name -->
            <div class="name-div">
                <label class="input-label-email" for="lastName">Last Name</label>
                <input  placeholder="Enter your Last Name" type="text" name="lastName" id="lastName">
            </div>
        </div>
        
        <div class="input-field">
            <label class="input-label-email" for="email">Email</label>
            <input  placeholder="Enter your Email" type="email" name="email" id="email">
        </div>
        <div class="input-field">
            <label class="input-label-password" for="password">Password</label>
            <input placeholder="Enter your Password" type="text" name="password" id="password">
        </div>
        <div class="input-field">
            <button class="register-button" type="submit">register</button>
        </div>
    </div>
</form>



