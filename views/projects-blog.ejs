<h1 style="text-align: center; padding-bottom: 14px;">All My Projects</h1>
<hr style="width: 80%;">
<hr>
<div class="project-grid-container">
    
    <% projects.forEach(project => { %>
        <div class="grid-container">
        <div class="grid-title">
            <h1><%= project.title %></h1>
        </div>
            <div class="grid-tags">
            <% project.tags.forEach( tag => { %>
                <div class="tag" style="background-color: <%= tag.colorValue %>">
                    <small><%= tag.name %></small>
                </div>
            <%  })  %>
            </div>
            <div class="grid-dates">
                <small><%= project.date.toLocaleDateString(undefined, options) %></small>
            </div>
            <div class="grid-description">
            <p><%- project.description %></p>
            <a href="/projects/<%= project._id %>">view</a>
            </div>

    </div>
    
    <% }) %>

</div>
<a class="create-project" href="/projects/create">Create a Project!</a>


