<div class="form-div">
<h1 class="form-header">Create a Project Blog</h1>

<form class="project-form-create" action="/projects/create" method="POST">
    <div  class="input title form-header">
    <label for="title">Title</label>
    <input placeholder="Title" type="text" name="title" id="title">
    </div>
    <hr>
    <div class="input description form-header">
    <label for="description">Description</label>
    <textarea placeholder="Description" name="description" id="description"></textarea>
    </div>
    <div class="tags">
        <% tags.forEach( tag => { %>
            <input type="checkbox" name="tags" value="<%= tag._id %>"><%= tag.name %><br>
        <% }) %>
    </div>
    <button type="submit">Publish</button>
</form>

</div>

